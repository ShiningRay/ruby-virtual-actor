source 'https://rubygems.org'

gem 'concurrent-ruby', '~> 1.2.0'  # 用于并发编程
gem 'connection_pool', '~> 2.4.0'  # 连接池管理
gem 'msgpack', '~> 1.7.0'         # 消息序列化
gem 'grpc'        # gRPC用于分布式通信
gem 'grpc-tools'  # gRPC代码生成工具
gem 'redis', '~> 5.0.0'           # Redis用于状态持久化
gem 'prometheus-client', '~> 4.1'  # 监控指标收集
gem 'webrick', '~> 1.8.1'         # 用于metrics服务器

group :development, :test do
  gem 'rspec', '~> 3.12'
  gem 'rspec-mocks', '~> 3.12'
  gem 'simplecov', '~> 0.22.0'
  gem 'faker', '~> 3.2'
end
